{
  "manifest_version": 3,
  "name": "Charon",
  "version": "0.1.0",
  "description": "Share shortcuts for your favorite websites!",
  "icons": {
    "16": "img/canoe-16.png",
    "32": "img/canoe-32.png",
    "48": "img/canoe-48.png",
    "128": "img/canoe-128.png"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "omnibox": {
    "keyword": "c"
  }
}
